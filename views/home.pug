doctype html
html(lang='en')
  head
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
  body
    nav.left-nav
      a(href='/run-test')
        p Run Test
      a(href='/view-test')
        p View Test
      a(href='/login')
        p Login
      a(href='/logout')
        p Logout
    style.
      * {
      margin: 0;
      padding: 0;
      }
      body {
      background-color: #0059A2;
      width: 100vw;
      height: 100vh;
      display: flex;
      position: relative;
      overflow: hidden;
      }
      nav.left-nav {
      display: flex;
      flex-direction: column;
      justify-content: space-evenly;
      align-items: flex-start;
      position: absolute;
      top: -500px;
      height: 1000px;
      right: -500px;
      width: 1000px;
      border: none;
      border-radius: 50%;
      background-color: #fff2;
      box-shadow: 0 0 15px #0003;
      }
      nav.left-nav a {
      width: 75px;
      height: 75px;
      border-radius: 50%;
      border: none;
      transition: all .6s ease-in-out;
      cursor: pointer;
      background-color: #0059A2;
      position: absolute;
      border: solid 1px #fff;
      border: solid 0px #fff;
      color: #fff;
      box-shadow: 0 0 15px #0003;
      text-decoration: none;
      display: flex;
      align-items: center;
      justify-content: center;
      }
      nav.left-nav a p {
      white-space: nowrap;
      transition: all .3s ease-in-out;
      font-weight: 600;
      }
      nav.left-nav a:nth-of-type(1) {
      left: -25px;
      bottom: 375px;
      }
      nav.left-nav a:nth-of-type(2) {
      left: 40px;
      bottom: 200px;
      }
      nav.left-nav a:nth-of-type(3) {
      left: 180px;
      bottom: 50px;
      }
      nav.left-nav a:nth-of-type(4) {
      left: 375px;
      bottom: -25px
      }
      nav.left-nav a:hover {
      transform: scale(1.5);
      }
      nav.left-nav a:hover p {
      margin-left: -50px;
      background-color: #0059A2;
      }